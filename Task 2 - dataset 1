import matplotlib.pyplot as plt
import numpy as np
import pandas as pd
import matplotlib

df = pd.read_csv("daily.csv")
time = df["time"]
temperature_2m_max = df["temperature_2m_max"]
temperature_2m_min = df["temperature_2m_min"]

#list of capitals
list_cit = list(df.capital_cities)
final_list_cit = list(dict.fromkeys(list_cit))


def show_graph():
    plt.plot(time,temperature_2m_max)
    plt.plot(time, temperature_2m_min)
    plt.show()


enter_city = input("Enter a capital city:")

if enter_city in final_list_cit:
    print(show_graph(enter_city))





